<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/entryLogPainLocLabel"
        android:text="@string/entry_log_form_painloc_label"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entryLogPainLocScroll">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/entryLogPainLocLinearLayout">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entry_log_form_painloc_presets_text"
                    android:checked="true"
                    android:id="@+id/entryLogPainLocRadPresets"/>
                <fragment
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:name="com.gardyanakbar.guardianheadpaindiary.ui.new_entry.forms.pain_location.PainLocationPresetSelection"
                    android:id="@+id/entryLogPainLocPresetFragment"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entry_log_form_painloc_custom_text"
                    android:id="@+id/entryLogPainlocRadCustom"/>
                <fragment
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:name="com.gardyanakbar.guardianheadpaindiary.ui.new_entry.forms.pain_location.PainLocationCustomSelection"
                    android:id="@+id/entryLogPainlocCustomFragment"/>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>