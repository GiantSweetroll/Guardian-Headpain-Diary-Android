<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAppBase"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_font_size"
        android:gravity="center"
        android:text="@string/table_settings_title_text"
        android:paddingBottom="30dp"
        android:layout_alignParentTop="true"
        android:id="@+id/tableSettingsTitleTextView"/>
    <ScrollView
        android:layout_below="@id/tableSettingsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_font_size"
                    android:id="@+id/tableSettingsDateFromTextView"
                    android:padding="@dimen/general_padding"
                    android:gravity="right"
                    android:text="@string/from_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/general_padding"
                    android:textSize="@dimen/header_font_size"
                    android:id="@+id/tableSettingsDateFromValueTextView"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_font_size"
                    android:padding="@dimen/general_padding"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tableSettingsDateFromChangeButton"
                    android:layout_margin="@dimen/general_padding"
                    android:text="@string/change_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableSettingsDateToTextView"
                    android:gravity="right"
                    android:padding="@dimen/general_padding"
                    android:textSize="@dimen/header_font_size"
                    android:text="@string/to_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_font_size"
                    android:padding="@dimen/general_padding"
                    android:id="@+id/tableSettingsDateToValueTextView"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_font_size"
                    android:padding="@dimen/general_padding"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="@dimen/general_padding"
                    android:id="@+id/tableSettingsDateToChangeButton"
                    android:text="@string/change_text"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingRight="@dimen/general_padding"
                android:columnCount="2">
                <TextView
                    android:paddingLeft="@dimen/general_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_by_text"
                    android:id="@+id/tableFilterCategoryTextView"
                    android:textSize="@dimen/header_font_size"/>
                <Spinner
                    android:paddingLeft="@dimen/general_padding"
                    android:id="@+id/tableFilterCategorySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingLeft="@dimen/general_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableFilterKeywordTextView"
                    android:text="@string/keyword_text"
                    android:textSize="@dimen/header_font_size"/>
                <EditText
                    android:id="@+id/tableFilterKeywordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/ok_text"
        android:id="@+id/tableSettingsBtnOk"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>